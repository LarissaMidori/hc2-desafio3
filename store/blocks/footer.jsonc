{
  "footer": {
    "blocks": ["footer-layout.desktop", "footer-layout.mobile"]
  },
  "footer-layout.desktop":{
    "children": ["sticky-layout#footer"]
  },
  "sticky-layout#footer": { 
    "children": [
      "flex-layout.row#footer"
    ]
  },
  "footer-layout.mobile": { 
    "children": [
      "flex-layout.row#footer"
    ]
  },
  "flex-layout.row#footer": { 
      "props": {
        "blockClass": "rodape"
      },
    "children": [
      "flex-layout.col#user",
      "flex-layout.col#desafios",
      "flex-layout.col#loja",
      "flex-layout.col#suporte"
    ]
  },
  "flex-layout.col#user":{
    "children": ["image#user", "rich-text#user"],
    "props": {
      "horizontalAlign": "center",
      "verticalAlign": "middle"
    }
  },
  "image#user": {
    "props": {
      "width": 18,
      "src": "assets/user.svg",
      "blockClass": "footer"
    }
  },
  "rich-text#user": {
    "props": {
      "text": "ENTRAR",
      "blockClass": "footer"
    }
  },
  "flex-layout.col#desafios":{
    "children": ["image#desafios", "rich-text#desafios"],
    "props": {
      "horizontalAlign": "center",
      "verticalAlign": "middle",
      "blockClass": "link",
      "url": "https://himawari--hiringcoders2021.myvtex.com/"
    }
  },
  "image#desafios": {
    "props": {
      "width": 18,
      "src": "assets/desafio.svg",
      "blockClass": "footer"
    }
  },
  "rich-text#desafios": {
    "props": {
      "text": "DESAFIOS",
      "blockClass": "footer"
    }
  },
  "flex-layout.col#loja":{
    "children": ["image#loja", "rich-text#loja"],
    "props": {
      "horizontalAlign": "center",
      "verticalAlign": "middle"
    }
  },
  "image#loja": {
    "props": {
      "width": 20,
      "src": "assets/loja.svg",
      "blockClass": "footer"
    }
  },
  "rich-text#loja": {
    "props": {
      "text": "LOJA",
      "blockClass": "footer"
    }
  },
  "flex-layout.col#suporte":{
    "children": ["image#suporte", "rich-text#suporte"],
    "props": {
      "horizontalAlign": "center",
      "verticalAlign": "middle"
    }
  },
  "image#suporte": {
    "props": {
      "width": 20,
      "src": "assets/whats.svg",
      "blockClass": "footer"
    }
  },
  "rich-text#suporte": {
    "props": {
      "text": "SUPORTE",
      "blockClass": "footer"
    }
  }
}